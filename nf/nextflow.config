/*
 * COSAP-NX Nextflow Configuration
 * Main configuration file
 */

// Default parameters
params {
    // Input files
    bam = null
    ref_fasta = null
    sample_id = 'sample'

    // Output
    outdir = './results'

    // DeepVariant options
    model_type = 'WGS'  // WGS, WES, or PACBIO
    gvcf = false

    // Resources
    cpus = 8
    memory = '16 GB'
}

// Include base configuration
includeConfig 'conf/base.config'

// Profiles
profiles {
    docker {
        includeConfig 'conf/docker.config'
    }

    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }

    test {
        // Minimal resources for testing
        process.cpus = 2
        process.memory = '4 GB'
    }
}

// Manifest
manifest {
    name = 'cosap-nx'
    author = 'COSAP-NX Team'
    description = 'COSAP-like pipeline with Nextflow backend'
    version = '0.1.0'
    nextflowVersion = '>=23.04.0'
}
